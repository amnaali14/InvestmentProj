@model BookingVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Your Stay</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/book-your-stay.css"> <!-- Link to custom CSS -->
</head>
<style>
    /* Container and Form Styling */
.form-container {
    background-color: #f7f9fc;
    border-radius: 10px;
    padding: 40px;
}

.booking-form {
    background-color: #ffffff;
    border-radius: 10px;
    animation: fadeInUp 0.7s ease-in-out;
}

h1.animate-heading {
    font-family: 'Roboto', sans-serif;
    font-weight: 700;
    color: #0078F0;
    margin-bottom: 40px;
    animation: slideDown 0.5s ease;
}

/* Input Fields */
input.form-control, select.form-select {
    border: 2px solid #0078F0;
    border-radius: 8px;
    padding: 10px;
    font-size: 16px;
    transition: all 0.3s ease;
}

input.form-control:focus, select.form-select:focus {
    border-color: #0056b3;
    box-shadow: 0 0 10px rgba(0, 120, 240, 0.2);
}

/* Button Styling */
.btn-submit {
    background-color: #0078F0;
    color: #fff;
    padding: 12px 30px;
    border-radius: 30px;
    font-size: 18px;
    font-weight: bold;
    transition: all 0.3s ease;
}

.btn-submit:hover {
    background-color: #0056b3;
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 87, 178, 0.2);
}

/* Animation Effects */



/* Form Field Animations */
input, select {
    animation: fadeIn 0.5s ease-in-out;
}

</style>
<body>
    <div class="container mt-5 form-container">
        <h1 class="text-center animate-heading">Book Your Stay</h1>

        <form asp-action="BookRoom" method="post" class="booking-form shadow-lg p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-3 col-form-label">Name</label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="RoomDescription" class="col-sm-3 col-form-label">Room Description</label>
                <div class="col-sm-9">
                    <select asp-for="RoomDescription" class="form-select">
                        <option value="">Select Room Type</option>
                        <option value="Room">Room</option>
                        <option value="Family Suite">Family Suite</option>
                        <option value="VIP Suite">VIP Suite</option>
                        <option value="Hotel Apartment">Hotel Apartment</option>
                        <option value="Vila">Vila</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="CheckInDate" class="col-sm-3 col-form-label">Check-in Date</label>
                <div class="col-sm-9">
                    <input asp-for="CheckInDate" class="form-control" type="date" />
                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="CheckOutDate" class="col-sm-3 col-form-label">Check-out Date</label>
                <div class="col-sm-9">
                    <input asp-for="CheckOutDate" class="form-control" type="date" />
                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="NumberofAdults" class="col-sm-3 col-form-label">Adults</label>
                <div class="col-sm-9">
                    <input asp-for="NumberofAdults" class="form-control" type="number" />
                    <span asp-validation-for="NumberofAdults" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="NumberofChildren" class="col-sm-3 col-form-label">Children</label>
                <div class="col-sm-9">
                    <input asp-for="NumberofChildren" class="form-control" type="number" />
                    <span asp-validation-for="NumberofChildren" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-submit animate-button">Proceed to Payment</button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model?.ConfirmationMessage))
        {
            <div class="alert alert-success mt-4">
                @Model.ConfirmationMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="alert alert-danger mt-4">
                @ViewData["ErrorMessage"]
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
