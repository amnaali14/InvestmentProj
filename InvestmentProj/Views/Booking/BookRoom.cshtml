@model BookingVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Room</title>
    <link rel="stylesheet" href="~/css/AuthSelection.css" /> 
</head>

<body>
    <div class="booking-container">
        <h2 class="heading">Book Your Room</h2>

        <div class="room-details">
            <h3>Room Details</h3>
            <p><strong>Description:</strong> @(Model.RoomDescription ?? "No Description Available")</p>
            <p><strong>Price:</strong> $@Model.RoomPrice per night</p>
        </div>


        <form asp-action="BookRoom" method="post" class="booking-form">
            <input type="hidden" asp-for="RoomID" />

            <div class="form-group">
                <label asp-for="CheckInDate">Check-In Date:</label>
                <input asp-for="CheckInDate" type="date" class= "form-control" />
                <span asp-validation-for="CheckInDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CheckOutDate">Check-Out Date:</label>
                <input asp-for="CheckOutDate" type="date" class="form-control" />
                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfPerson">Number of Persons:</label>
                <input asp-for="NumberOfPerson" type="number" class="form-control" min="1" max="10" />
                <span asp-validation-for="NumberOfPerson" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name">Your Name:</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter your full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalPrice">Total Price:</label>
                <input asp-for="TotalPrice" type="number" class="form-control" readonly />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Book Now</button>
            </div>
        </form>
    </div>

   
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
