<!DOCTYPE html>
<html lang="en">
    <head>
    <title>@ViewData["Title"] - InvestmentProj</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   
<link rel="stylesheet" href="~/css/styles.css" /> 
    @RenderSection("Styles", required: false)
</head>


<body>
    <header>
        <!DOCTYPE html>
        <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>InvestmentProj</title>
            <link rel="stylesheet" href="path/to/your/styles.css"> <!-- Link to your CSS file -->
            <link rel="stylesheet" href="path/to/bootstrap.min.css"> <!-- Link to Bootstrap CSS -->
        </head>
        <body class="light-mode">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InvestmentProj</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <div class="d-flex align-items-center">
                            <label class="theme-switch" for="theme-toggle">
                                <input type="checkbox" id="theme-toggle">
                                <span>Dark Mode</span>
                            </label>
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container">
                @RenderBody()
            </div>

            <script src="path/to/bootstrap.bundle.min.js"></script> <!-- Link to Bootstrap JS -->
            <script src="~/js/theme-toggle.js"></script>
       
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Main Content -->
            <main role="main" class="col-md-12 px-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
