@{
    ViewBag.Title = "Registration Confirmation";
}
<link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />

<style>
    /* Container for the confirmation page */
    .confirmation-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(to right, #f5f5f5, #ffffff);
        padding: 20px;
    }

    /* Card styling */
    .confirmation-card {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        text-align: center;
        margin-top: 50px; /* Adjust this value as needed */
    }

    /* Header styling */
    .confirmation-header {
        font-size: 24px;
        color: cornflowerblue;
        margin-bottom: 15px;
        font-family: 'Montserrat', sans-serif;
        margin-top: 20px; /* Add margin-top to push heading down */
    }

    /* Content styling */
    .confirmation-content {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
        font-family: 'Heebo', sans-serif;
    }

    /* Button styling */
    .btn-primary {
        background-color: cornflowerblue;
        color: #ffffff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: white;
        }
</style>

<div class="confirmation-container">
    <div class="confirmation-card">
        <h2 class="confirmation-header">Registration Completed</h2>
        <p class="confirmation-content">Your registration is successful! You can now log in to your account using your credentials.</p>
        <a class="btn btn-primary" asp-action="Login">Log in</a>
    </div>
</div>
