
@using InvestmentProj.ViewModels
@model LoginVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/Login.css" />
   
</head>

@{
    ViewData["Title"] = "Login";
}

<div class="rectangle-container">
    <div class="login-container">
        <div class="icon-container">
            <div class="ellipse">
                <img src="~/images/focal-person.jpeg" alt="Person Icon" class="icon-img">
            </div>
        </div>
        <h2 class="login-heading">Login</h2>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 position-relative">
                <input asp-for="Username" class="form-control" placeholder="Username">
                <span class="focal-icon"></span> 
            </div>

           
            <div class="mb-3 position-relative">
                <input asp-for="Password" class="form-control" placeholder="Password" type="password">
                <span class="visibility-off-icon"></span> 
            </div>
         
            <div class="remember-me-container mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input remember-me-checkbox" />
                    <label class="form-check-label remember-me-label">Remember Me</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary login-button">Login</button>

            <div class="mt-3">
                <p class="text-muted text-center">Don't have an account? <a asp-action="Register" class="btn-link">Register now</a></p>
            </div>
        </form>
    </div>
</div>
