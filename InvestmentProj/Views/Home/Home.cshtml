@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Hotel Booking App</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/AuthSelection.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .hero {
            background: url('https://www.blizin.com/public/images/uploads/hotel/views/greenretreatnathiagali-1610626914.jpg') no-repeat center center;
            background-size: cover;
            height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            position: relative;
        }

        .hero h1 {
            font-size: 3rem;
            animation: fadeInDown 1s ease;
        }

        .hero p {
            font-size: 1.5rem;
            animation: fadeInUp 1s ease;
        }

   

        .info-section {
            padding: 2rem 1rem;
            background-color: #f8f9fa;
        }

        .info-section h2 {
            margin-bottom: 1rem;
            text-align: center;
        }

        .card {
            transition: transform 0.3s;
        }

        .card:hover {
            transform: translateY(-10px);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Hotel Booking App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Gallery">Gallery</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Services">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="hero">
        <div>
            <h1>Welcome to Our Hotel</h1>
            <p>Experience Luxury and Comfort</p>
        </div>
    </div>

    <div class="info-section">
        <h2>Our Facilities</h2>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img src="https://example.com/image1.jpg" class="card-img-top" alt="Facility 1">
                        <div class="card-body">
                            <h5 class="card-title">Luxury Rooms</h5>
                            <p class="card-text">Enjoy our spacious and elegantly furnished rooms.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="https://example.com/image2.jpg" class="card-img-top" alt="Facility 2">
                        <div class="card-body">
                            <h5 class="card-title">Swimming Pool</h5>
                            <p class="card-text">Relax in our beautiful outdoor swimming pool.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="https://example.com/image3.jpg" class="card-img-top" alt="Facility 3">
                        <div class="card-body">
                            <h5 class="card-title">Spa Services</h5>
                            <p class="card-text">Indulge in our luxurious spa treatments.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
   
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
