@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/Aboutus.css" />
</head>
<body>
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>

    <main>
        <section class="about-section">
            <h2>Our Story</h2>
            <p>Welcome to the Grand Royal Siwss! We have been providing exceptional hospitality since 2000. Our mission is to offer a memorable experience with top-notch services and comfort.</p>
            <img src="~/images/about-us.jpg" alt="About Us Image" />
        </section>

        <section class="team-section">
            <h2>Meet Our Team</h2>
            <div class="team-member">
                <img src="~/images/team-member1.jpg" alt="Team Member 1" />
                <h3>Jane Doe</h3>
                <p>General Manager</p>
            </div>
            <div class="team-member">
                <img src="~/images/team-member2.jpg" alt="Team Member 2" />
                <h3>John Smith</h3>
                <p>Head Chef</p>
            </div>
            <!-- Add more team members as needed -->
        </section>

        <section class="contact-info">
            <h2>Contact Us</h2>
            <p>If you have any questions or need more information, feel free to <a href="~/Contact/Index">contact us</a>.</p>
        </section>
    </main>

    <footer>
        <p>&copy; [2000] [The Grand Royal Swiss]. All rights reserved.</p>
    </footer>
</body>
</html>
