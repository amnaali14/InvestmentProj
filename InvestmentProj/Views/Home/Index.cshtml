@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Website</title>
    <!-- Include your CSS files here -->
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Include Bootstrap CSS if used -->
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" /> -->
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="text-center">
                    <h1 class="display-4">Welcome to RefreshOnline</h1>
                    <p>We value your choice! <a href="#">Learn more</a></p>
                </div>

                <div>
                    <h2>About Us!</h2>
                    <p>RefreshOnline is our comprehensive digital platform designed to enhance the customer experience and streamline our business operations. The web app serves as a central hub for customers to explore our product range, place orders, track deliveries, and access promotional offers.</p>
                </div>
            </main>
        </div>
    </div>

    <!-- Include your JavaScript files here -->
    <script src="~/js/site.js"></script>
    <!-- Include Bootstrap JS if used -->
    <!-- <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script> -->
</body>
</html>
